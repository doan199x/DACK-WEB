<div class="container">
    <br>
    <div class="row">
        <div class="col-lg-3">
            {{>teacher-nav}}
        </div>
        <div class="col-lg-9">
            <div class="row">
                <div class="col-lg-12">
                    <h3>Nội dung khóa học</h3>
                    <hr>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    {{#each chapterInfo}}
                    <li class="list-group-item active active-chapter" style="width:100%" id="li-main{{@index}}"
                        onclick="HideLessons({{@index}})">{{chapterName}} <i class="far fa-edit fa-lg"
                            style="float:right"></i></li>
                    {{#each lessons}}
                    <li class="list-group-item lesson-active" style="width:100%" id="li{{lessonID}}"
                        onclick="changeLesson({{lessonID}})" style="cursor:pointer">{{lessonName}}<i
                            class="fas fa-edit fa-lg" style="float:right"></i></li>
                    {{/each}}
                    <li class="list-group-item lesson-active" style="width:100%;cursor:pointer"><i
                            style="margin-right:5px" class="fas fa-plus-square fa-lg"></i>Thêm bài học</li>
                    {{/each}}
                </div>
            </div>

        </div>
    </div>

</div>