<div class="container">
    <div class="row">
        <div class="col-lg-4">
            {{>teacher-nav}}
        </div>
        <div class="col-lg-8">
            <div class="row">
                <div class="col-lg-12">
                    <h3>Danh sách khóa học</h3>
                    <hr>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <div class="float-right" style="margin-bottom:5px">
                        <input id="inputTimKiem" style="margin-right:10px;" placeholder="Tìm kiếm"><i
                            onclick="timKiemKhoaHoc()" class="fa fa-search" aria-hidden="true"
                            style="cursor:pointer"></i>
                    </div>
                </div>
            </div>
            {{#each courses}}
            <div class="row" style="margin-top: 10px;">
                <div class="col-lg-5">
                    <img src="{{imagePath}}" style="border: 1px solid black" height="200px" width="300px">
                </div>
                <div class="col-lg-7">
                    <div class="row">
                        <div class="col-lg-4">
                            <h5>Khóa học:</h5>
                        </div>
                        <div class="col-lg-8">
                            <h5>{{name}}</h5>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-4">
                            <span>SL học viên:</span>
                        </div>
                        <div class="col-lg-8">
                            <span>{{NoStudents}}</span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-4" style="margin-top:5px">
                            <span>Đánh giá:</span>
                        </div>
                        <div class="col-lg-8">
                            <h4 style="display:inline">{{averageStar}}</h4>
                            <div class="stars-outer">
                                <div class="stars-inner" id="starWidth" style="width: {{widthStar}};"></div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-4">
                            <span>Mô tả:</span>
                        </div>
                        <div class="col-lg-8">
                            <span>{{description}}</span>
                        </div>
                    </div>
                    <div class="row float-right" style="margin-right:1.5em;margin-top:0.5em">
                        <button onclick="chinhSuaKhoaHoc({{courseID}})" class="btn btn-secondary">Chỉnh sửa</button>
                    </div>
                </div>
            </div>
            <hr>
            {{/each}}

            <div class="row justify-content-center" style="margin-top:20px">
                <button class="btn btn-secondary" style="margin-right:2px"
                    onclick="getPrevPage({{pagingInfo.preve_value}},{{perPage}})"><i class="fa fa-angle-left"
                        aria-hidden="true"></i></button>
                <button class="btn btn-secondary">{{currentPage}}</i></button>
                <button class="btn btn-secondary" style="margin-left:2px"
                    onclick="getNextPage({{pagingInfo.next_value}},{{perPage}})"><i class="fa fa-angle-right"
                        aria-hidden="true"></i></button>
            </div>
        </div>
    </div>
</div>