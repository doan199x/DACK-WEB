<div class="container">
    <div class="row">
        <div class="col-lg-4">
            {{>teacher-nav}}
        </div>
        <div class="col-lg-8">
            <div class="row">
                <div class="col-lg-12">
                    <h3>Thông tin cá nhân</h3>
                    <hr>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-5">
                    <img class="img-profile" src="{{teacher.avatarPath}}" width="260px" height="260px">
                </div>
                <div class="col-lg-7">
                    <fieldset>
                        <legend>Giảng viên: {{teacher.name}}</legend>
                        <hr>
                        <div class="row">
                            <label class="col-sm-4">Email:</label>
                            <div class="col-sm-8">
                                <span>{{teacher.email}}</span>
                            </div>
                        </div>
                        <div class="row">
                            <label class="col-sm-4">Số điện thoại:</label>
                            <div class="col-sm-8">
                                <span>{{teacher.phone}}</span>
                            </div>
                        </div>
                        <div class="row">
                            <label class="col-sm-4">Ngày sinh:</label>
                            <div class="col-sm-8">
                                <span>{{#time teacher.dateOfBirth 'DD/MM/YYYY'}}{{/time}}</span>
                            </div>
                        </div>
                        <br>
                        <div class="row">
                            <div class="btn-width-custom-large">
                                <a class="btn btn-block btn-secondary" style="margin-right:10px"
                                    href="/teacher/profile-edit">Chỉnh
                                    sửa</a>
                            </div>
                            <div class="btn-width-custom-large">
                                <button data-toggle="modal" data-target="#changePassword"
                                    class="btn btn-block btn-secondary">Đổi mật
                                    khẩu</button>
                            </div>
                            {{!-- modal doi mat khau --}}
                            <div class="modal fade" id="changePassword" tabindex="-1" role="dialog"
                                aria-labelledby="categoryModelLabel" aria-hidden="true">
                                <div class="modal-dialog" role="document">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title">Đổi mật khẩu</h5>
                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                <span aria-hidden="true">&times;</span>
                                            </button>
                                        </div>
                                        <div class="modal-body">
                                            <div>
                                                <div class="row">
                                                    <div class="col-lg-4">
                                                        <span>Mật khẩu cũ</span>
                                                    </div>
                                                    <div class="col-lg-8">
                                                        <input type="password" class="form-control" id="oldPassword"
                                                            style="width: 80%;">
                                                    </div>
                                                </div>
                                                <div class="row row-modal">
                                                    <div class="col-lg-4">
                                                        <span>Mật khẩu mới</span>
                                                    </div>
                                                    <div class="col-lg-8">
                                                        <input type="password" class="form-control" id="newPassword"
                                                            style="width: 80%;">
                                                    </div>
                                                </div>
                                                <div class="row row-modal">
                                                    <div class="col-lg-4">
                                                        <span>Xác nhận mật khẩu</span>
                                                    </div>
                                                    <div class="col-lg-8">
                                                        <input type="password" class="form-control" id="confirmPassword"
                                                            style="width: 80%;">
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-warning" data-dismiss="modal"
                                                style="color: white;font-weight:bold">Đóng</button>
                                            <button onclick="doiMatKhauGV()" type="submit"
                                                class="btn btn-secondary">Đổi</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            {{!-- modal chinh sua chuong hoc --}}
                        </div>
                        {{#equal result 'passed'}}
                        <hr>
                        <h3 style="color: green;">Cập nhật thông tin thành công</h3>
                        {{/equal}}
                        {{#equal result 'failed'}}
                        <hr>
                        <h3 style="color: red;">Cập nhật thông tin thất bại</h3>
                        {{/equal}}
                    </fieldset>
                    <br>
                </div>
            </div>
        </div>
    </div>
</div>