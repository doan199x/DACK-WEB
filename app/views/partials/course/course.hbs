<div class="container">
    <!-- 10 most wacthes -->
    <div class="all">
        <h3 class="title"> ️🔖 Danh sách khóa học hiện có </h3>
        <div class="divider"></div>
        <div class="search__group">
            <div class="search-bar">
                <input id="search" style="margin-right:10px;" placeholder="Tìm kiếm">
                <button type="submit" class="btn btn-primary" onclick="searchCourse()">
                    <i class="fa fa-search" aria-hidden="true"></i>
                </button>
            </div>
            <div class="switch">
                <div class="form-check">
                    <label class="form-check-label" for="check1">
                        <input type="checkbox" class="form-check-input" id="rate_check" name="option1" value="no"
                            onclick="rateChecked()">Điểm đánh giá giảm dần
                    </label>
                </div>
                <div class="form-check">
                    <label class="form-check-label" for="check1">
                        <input type="checkbox" class="form-check-input" id="price_check" name="option1" value="no"
                            onclick="priceChecked()">Giá tăng dần
                    </label>
                </div>
            </div>
        </div>
        <div class="course">
            {{#if courses}}
            {{#each courses}}
          <div class="flex__card" style="padding-left: 15%;">
                <div class="card card-custom" style = "height:600px" id="card{{this.id}}">
                <a href="/course/detail?courseID={{this.id}}">
                    <img height="200px" class="card-img-top" src="{{this.img}}" alt="Card image cap">
                </a>
                <div class="card__courseName">
                    <h6 class="card-title">{{this.courseName}}</h6>
                </div>
                <div class="highlight">
                    {{#if this.newColor}}
                    <h5 class="new" style="background-color: {{this.newColor}}">
                        Mới
                    </h5>
                    {{/if}}

                    {{#if this.topColor}}
                    <h5 class="top" style="background-color: {{this.topColor}}">
                        Nổi bật
                    </h5>
                    {{/if}}

                </div>
                <div class="card-body">
                    <div>
                        <small class="card-title">Giáo viên: {{this.teacherName}}</small>
                    </div>
                    <div>
                        <small class="card-title">Danh mục: {{this.categoryName}}</small>
                    </div>
                    <div class="star__div">
                        <h4 style="display:inline">{{this.stars}}</h4>
                        <div class="stars-outer">
                            <div class="stars-inner" id="starWidth" style="width: {{this.widthStar}};"></div>
                        </div>
                    </div>
                   <div>
                         <h5 style="display:inline">Giá:</h5>
                        <h5 style="display:inline; {{#if this.saleprice}} text-decoration: line-through {{/if}} ">
                            ₫{{#money this.price}}{{/money}}</h5>
                        {{#if this.saleprice}}
                        <h3 style="display:inline; font-weight:bold; color:#D0011B">₫{{#money this.saleprice}}{{/money}}
                        </h3>
                        <h5 style=" text-align:center; background-color:#ff6f60;color:white">{{this.percent}}% GIẢM</h5>
                        {{/if}}
                   </div>
                    <div>
                        <small class="card-title">Lượt xem: {{this.views}}</small>
                    </div>
                    <div>
                        <small class="card-title">Số lượt đăng ký học: {{this.NoReStudent}}</small>
                    </div>
                    <div>
                        <small class="card-title">Thời gian bắt đầu: {{this.created}}</small>
                    </div>
                </div>
            </div>
          </div>
            {{/each}}
            {{else}}
                <i class="notify">Không có khóa học hay danh mục, danh mục con nào như trên!<br>Thử lại với từ khóa
            khác</i>
            {{/if}}
        </div>
        
    </div>
    <div class="page__button row justify-content-center" style="margin-top:20px">
            <button class="btn btn-secondary" style="margin-right:2px"
                onclick="getPrevPage({{pagingInfo.preve_value}},{{perPage}})"><i class="fa fa-angle-left"
                    aria-hidden="true"></i></button>
            <button class="btn btn-secondary">{{currentPage}}</i></button>
            <button class="btn btn-secondary" style="margin-left:2px"
                onclick="getNextPage({{pagingInfo.next_value}},{{perPage}})"><i class="fa fa-angle-right"
                    aria-hidden="true"></i></button>
        </div>
</div>
</div>