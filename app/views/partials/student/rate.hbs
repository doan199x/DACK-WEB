<div class="container" style="margin-top:20px">
    <div class="row">
        <div class="col-lg-12">
            <h3 style="font-weight:bold">Khóa học: {{course.name}}</h3>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-5">
            <h5>Giáo viên: Nguyễn Văn An</h5>
            <img src="{{course.imagePath}}" style="border: 1px solid black;border-radius:5px" height="250px"
                width="395px">
            <div class="row">
                <div class="col-lg-11">
                    <h3 style="display:inline">{{course.averageStar}}</h3>
                    <div class="stars-outer">
                        <div class="stars-inner" id="starWidth" style="width: {{widthStar}};"></div>
                    </div>
                    <h3 style="display:inline">({{rateCount}} đánh giá)</h3>
                </div>
            </div>
        </div>
        <div class="col-lg-7">
            {{#equal checkRated true}}
            <div class="row">
                <div class="col-lg-12 justify-content-center d-flex">
                    <div class="stars-outer">
                        <div class="stars-inner" id="starWidth" style="width: {{widthUserStar}};"></div>
                    </div>
                </div>
            </div>
            {{else}}
            <div>
                <div class="wrap">
                    <div class="stars">
                        <label class="rate">
                            <input type="radio" name="radio1" id="star1" value="star1">
                            <div class="face"></div>
                            <i class="far fa-star star one-star"></i>
                        </label>
                        <label class="rate">
                            <input type="radio" name="radio1" id="star2" value="star2">
                            <div class="face"></div>
                            <i class="far fa-star star two-star"></i>
                        </label>
                        <label class="rate">
                            <input type="radio" name="radio1" id="star3" value="star3">
                            <div class="face"></div>
                            <i class="far fa-star star three-star"></i>
                        </label>
                        <label class="rate">
                            <input type="radio" name="radio1" id="star4" value="star4">
                            <div class="face"></div>
                            <i class="far fa-star star four-star"></i>
                        </label>
                        <label class="rate">
                            <input type="radio" name="radio1" id="star5" value="star5">
                            <div class="face"></div>
                            <i class="far fa-star star five-star"></i>
                        </label>
                    </div>
                </div>
            </div>
            {{/equal}}
            <div class="form-group">
                <label for="commentRate">Nhận xét của bạn</label>
                {{#equal checkRated true}}
                <textarea class="form-control" id="commentRate" rows="6" disabled>{{userComment}}</textarea>
                {{else}}
                <textarea class="form-control" id="commentRate" rows="6"></textarea>
                {{/equal}}
                <button class="btn btn-secondary" style="margin-top:10px; font-weight:bold" onclick="rate()"
                    {{#equal checkRated true}} disabled {{/equal}}>Đánh
                    giá</button>
            </div>
            <input type="text" hidden id="NOstars" value='chuadanhgia'>
            <input type="text" hidden id="courseID" value='{{course.courseID}}'>
            <input type="text" hidden id="studentID" value="{{studentID}}">
            <input type="text" hidden id="checkRated" value="{{checkRated}}">
        </div>
    </div>
</div>