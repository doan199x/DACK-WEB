<div class="container">
    <br>
    {{>profile-header}}
    <br>
    <div class="row">
        <div class="col-lg-4">
            <img style="border: 2px solid black" src="/image/default.jpg" width="300" height="300">
        </div>
        <div class="col-lg-6">
            <fieldset>
                <legend>Học viên: {{studentProfile.name}}</legend>
                <hr>
                <div class="row">
                    <label class="col-sm-3">Email:</label>
                    <div class="col-sm-9">
                        <span>{{studentProfile.email}}</span>
                    </div>
                </div>
                <div class="row">
                    <label class="col-sm-3">Số điện thoại:</label>
                    <div class="col-sm-9">
                        <span>{{studentProfile.phone}}</span>
                    </div>
                </div>
                <div class="row">
                    <label class="col-sm-3">Ngày sinh:</label>
                    <div class="col-sm-9">
                        <span>{{#time studentProfile.dateOfBirth 'DD/MM/YYYY'}}{{/time}}</span>
                    </div>
                </div>
                <div class="row">
                    <label class="col-sm-3">Ngày tham gia:</label>
                    <div class="col-sm-9">
                        <span>{{#time studentProfile.dateJoin 'DD/MM/YYYY'}}{{/time}}</span>
                    </div>
                </div>
                <div class="row">
                    <label class="col-sm-3">Số dư:</label>
                    <div class="col-sm-9">
                        <span>{{#money studentProfile.balance}}{{/money}} VND</span>
                    </div>
                </div>
            </fieldset>
        </div>
    </div>
</div>