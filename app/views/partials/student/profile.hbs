<div class="container" style="margin-bottom:160px">
    <br>
    {{>profile-header}}
    <br>
    <div class="row">
        <div class="col-lg-4">
            <img class="img-profile" src="{{studentProfile.avatarPath}}" width="300" height="300">
        </div>
        <div class="col-lg-6">
            <fieldset>
                <legend>Học viên: {{studentProfile.name}}</legend>
                <hr>
                <div class="row">
                    <label class="col-sm-3">Email:</label>
                    <div class="col-sm-9">
                        <span>{{studentProfile.email}}</span>
                    </div>
                </div>
                <div class="row">
                    <label class="col-sm-3">Số điện thoại:</label>
                    <div class="col-sm-9">
                        <span>{{studentProfile.phone}}</span>
                    </div>
                </div>
                <div class="row">
                    <label class="col-sm-3">Ngày sinh:</label>
                    <div class="col-sm-9">
                        <span>{{#time studentProfile.dateOfBirth 'DD/MM/YYYY'}}{{/time}}</span>
                    </div>
                </div>
                <div class="row">
                    <label class="col-sm-3">Ngày tham gia:</label>
                    <div class="col-sm-9">
                        <span>{{#time studentProfile.dateJoin 'DD/MM/YYYY'}}{{/time}}</span>
                    </div>
                </div>
                <div class="row">
                    <label class="col-sm-3">Số dư:</label>
                    <div class="col-sm-9">
                        <span>{{#money studentProfile.balance}}{{/money}} VND</span>
                    </div>
                </div>
                <br>
                <div class="row">
                    <div class="btn-width-custom-medium">
                        <a class="btn btn-block btn-secondary bold" style="margin-right:10px"
                            href="/student/profile-edit">Chỉnh
                            sửa</a>
                    </div>
                    <div class="btn-width-custom-large">
                        <button data-toggle="modal" data-target="#changePassword"
                            class="btn btn-block btn-secondary">Đổi mật
                            khẩu</button>
                    </div>
                    {{!-- modal doi mat khau --}}
                    <div class="modal fade" id="changePassword" tabindex="-1" role="dialog"
                        aria-labelledby="categoryModelLabel" aria-hidden="true">
                        <div class="modal-dialog" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title">Đổi mật khẩu</h5>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                <div class="modal-body">
                                    <div>
                                        <div class="row">
                                            <div class="col-lg-4">
                                                <span>Mật khẩu cũ</span>
                                            </div>
                                            <div class="col-lg-8">
                                                <input type="password" class="form-control" id="oldPassword"
                                                    style="width: 80%;">
                                            </div>
                                        </div>
                                        <div class="row row-modal">
                                            <div class="col-lg-4">
                                                <span>Mật khẩu mới</span>
                                            </div>
                                            <div class="col-lg-8">
                                                <input type="password" class="form-control" id="newPassword"
                                                    style="width: 80%;">
                                            </div>
                                        </div>
                                        <div class="row row-modal">
                                            <div class="col-lg-4">
                                                <span>Xác nhận mật khẩu</span>
                                            </div>
                                            <div class="col-lg-8">
                                                <input type="password" class="form-control" id="confirmPassword"
                                                    style="width: 80%;">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-warning" data-dismiss="modal"
                                        style="color: white;font-weight:bold">Đóng</button>
                                    <button onclick="hocSinhDoiMK()" type="submit"
                                        class="btn btn-secondary">Đổi</button>
                                </div>
                            </div>
                        </div>
                    </div>
                    {{!-- modal chinh sua chuong hoc --}}
                </div>
                {{#equal result 'success'}}
                <hr>
                <h3 style="color: green;">Cập nhật thông tin thành công</h3>
                {{/equal}}
                {{#equal result 'fail'}}
                <hr>
                <h3 style="color: red;">Cập nhật thông tin thất bại</h3>
                {{/equal}}
            </fieldset>
            <br>
        </div>
    </div>
</div>